# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Site URL Configuration (Important for Auth Redirects)
# Set this to match your actual running port in development
# If your server runs on port 3001 (common when 3000 is busy), use:
NEXT_PUBLIC_SITE_URL=http://localhost:3001
# If your server runs on port 3000, use:
# NEXT_PUBLIC_SITE_URL=http://localhost:3000
# 
# For production deployment:
# NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app

# Movie Database API Keys
TMDB_API_KEY=your_tmdb_api_key_here

# AI API Keys - Using Claude 3.7 Sonnet
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Optional: Database configuration overrides
# MOVIE_DEFAULT_DATABASE=tmdb
# MOVIE_SEARCH_DATABASE=tmdb
# MOVIE_TRENDING_DATABASE=tmdb
# MOVIE_RECOMMENDATIONS_DATABASE=tmdb
# MOVIE_FALLBACK_DATABASE=local

# AI Model Configuration (Optional - uses Claude 3.7 defaults if not set)
AI_DEFAULT_MODEL=claude-3-7-sonnet-20250219
AI_CHAT_MODEL=claude-3-7-sonnet-20250219
AI_FAST_MODEL=claude-3-5-haiku-20241022

# Development Settings
DEVELOPMENT_LOGGING=true

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000 