# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Optional – only needed for server-side admin operations (not required in CI)
SUPABASE_SERVICE_ROLE_KEY=

# Site URL (used by Supabase for OAuth / magic-link redirects)
# In development point this at the port your Next.js server runs on.
# Example for port 3000:
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# External APIs
TMDB_API_KEY=
ANTHROPIC_API_KEY=

# Voice Chat (using Web Speech API - no external service needed)
# Note: Voice functionality is now built-in using browser's Speech Recognition and Synthesis APIs

# Environment (only change NODE_ENV via scripts)
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# AI Model configuration (optional – sensible defaults baked into code)
AI_DEFAULT_MODEL=claude-3-7-sonnet-20250219
AI_CHAT_MODEL=claude-3-7-sonnet-20250219
AI_FAST_MODEL=claude-3-5-haiku-20241022

# Optional overrides for movie database services
# MOVIE_DEFAULT_DATABASE=tmdb
# MOVIE_SEARCH_DATABASE=tmdb

# Development flags
DEVELOPMENT_LOGGING=true

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000 
NEXT_PUBLIC_ENABLE_EXPLANATIONS=true

# Behavioral weights
BEHAVIORAL_HOUR_WEIGHT=0.1
BEHAVIORAL_DAY_WEIGHT=0.15